{
  "name": "luxury-beauty-fullstack",
  "type": "fullstack-stack",
  "description": "High-end fullstack system for luxury beauty salons and barbershops with premium UX and strong visual identity.",

  "decision_profile": {
    "business_type": ["barbearia", "salao de beleza"],
    "audience": "premium",
    "product_type": "sistema",
    "seo": false,
    "interactivity": "high",
    "branding_priority": "high"
  },

  "extends": ["react-vite-spa", "node-express-api"],

  "frontend_stack": "react-vite-spa",
  "backend_stack": "node-express-api",

  "frontend_visual": ["hero-centered", "minimalist", "bento-grid", "motion-ui", "dark-mode"],

  "dependencies": [
    "framer-motion",
    "lucide-react",
    "phosphor-react",
    "date-fns",
    "clsx",
    "tailwind-merge"
  ],

  "configuration": {
    "theme": {
      "mode": "dark",
      "palette_style": "luxury-premium",
      "primary": "neon-yellow",
      "secondary": "neon-purple",
      "accent": "cyan"
    },
    "styling": {
      "framework": "tailwindcss",
      "effects": ["glassmorphism", "soft-glow"]
    },
    "ux_guidelines": [
      "Mobile-First",
      "Premium UX",
      "High Perceived Value",
      "Smooth Micro-Interactions"
    ]
  },

  "modules": ["Booking System", "Client Management", "Financial Dashboard", "AI Integration"]
}
