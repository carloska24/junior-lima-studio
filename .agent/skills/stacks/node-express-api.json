{
  "name": "node-express-api",
  "type": "backend-stack",
  "description": "Scalable backend API stack using Node.js and Express with REST architecture.",

  "decision_profile": {
    "api_type": "rest",
    "backend_separated": true,
    "scalability": "medium-high",
    "auth_required": true,
    "language": "typescript"
  },

  "configuration": {
    "runtime": "nodejs",
    "framework": "express",
    "language": "typescript",
    "architecture": "layered",
    "api_style": "rest"
  },

  "dependencies": [
    "express",
    "cors",
    "helmet",
    "morgan",
    "dotenv",
    "zod",
    "jsonwebtoken",
    "bcryptjs"
  ],

  "devDependencies": [
    "typescript",
    "@types/node",
    "@types/express",
    "@types/cors",
    "@types/morgan",
    "@types/jsonwebtoken",
    "@types/bcryptjs",
    "ts-node-dev",
    "jest",
    "supertest"
  ],

  "recommendedStructure": [
    "src/controllers",
    "src/routes",
    "src/services",
    "src/models",
    "src/middleware",
    "src/utils",
    "src/config"
  ]
}
