{
  "name": "stack-resolver",
  "description": "Decide automaticamente a stack tecnológica ideal com base no tipo de produto, negócio e contexto.",
  "decision_inputs": [
    "tipo_de_produto",
    "tipo_de_negocio",
    "publico",
    "seo",
    "interatividade"
  ],
  "rules": [
    {
      "if": {
        "tipo_de_negocio": ["barbearia", "salao"],
        "publico": "premium"
      },
      "use_stack": "luxury-beauty-fullstack"
    },
    {
      "if": {
        "tipo_de_produto": "saas",
        "seo": true
      },
      "use_stack": "fullstack-saas-standard"
    },
    {
      "if": {
        "tipo_de_produto": "spa",
        "interatividade": "alta",
        "seo": false
      },
      "use_stack": "react-vite-spa"
    }
  ],
  "fallback": "react-vite-spa"
}
