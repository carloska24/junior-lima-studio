generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Admin/Staff users for the system
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String   // Hashed
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Client {
  id           String        @id @default(uuid())
  name         String
  phone        String        @unique // Unique identifier often useful
  email        String?
  notes        String?
  appointments Appointment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("clients")
}

model Service {
  id          String        @id @default(uuid())
  name        String
  description String?
  price       Decimal       @db.Decimal(10, 2)
  durationMin Int           // Duration in minutes
  imageUrl    String?       // URL da imagem do serviço
  active      Boolean       @default(true)
  appointments Appointment[] // Implicit many-to-many
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("services")
}

enum MediaType {
  IMAGE
  VIDEO
}

// Portfólio de trabalhos para exibição na landing page
model PortfolioItem {
  id          String    @id @default(uuid())
  title       String
  
  // Legacy String Category (Manteve-se para compatibilidade temporária)
  category    String    

  // New Relation
  categoryId  String?
  categoryRef Category? @relation(fields: [categoryId], references: [id])

  imageUrl    String
  videoUrl    String?   // URL do vídeo (opcional)
  type        MediaType @default(IMAGE)
  duration    Int?      @default(5000) // Duração (5000ms padrão ou duração do vídeo)
  description String?
  order       Int       @default(0) // Ordem de exibição do ITEM dentro da categoria
  active      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("portfolio_items")
}

model Category {
  id        String          @id @default(uuid())
  name      String          @unique
  order     Int             @default(0)
  coverImageUrl String?     // Capa personalizada da categoria
  items     PortfolioItem[]
  active    Boolean         @default(true)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  @@map("categories")
}



model Appointment {
  id        String   @id @default(uuid())
  date      DateTime // Start time
  endDate   DateTime // End time (Calculated based on service duration)
  
  status    AppointmentStatus @default(PENDING)
  notes     String?
  
  // Financial Snapshot
  totalPrice Decimal? @db.Decimal(10, 2) // Stored at completion to preserve history

  clientId  String
  client    Client   @relation(fields: [clientId], references: [id])
  
  services  Service[] // Implicit many-to-many allows booking multiple services

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("appointments")
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELED
  NO_SHOW
}

model StudioSettings {
  id           String   @id @default(uuid())
  name         String
  email        String
  phone        String
  whatsapp     String
  address      String
  city         String
  openingHours String
  instagramUrl String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("studio_settings")
}
